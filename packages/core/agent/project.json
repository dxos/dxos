{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "agent",
  "tags": [
    "scope:core"
  ],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {
      "options": {
        "transformers": [
          "@dxos/log-hook/transformer"
        ]
      }
    },
    "compile": {
      "options": {
        "entryPoints": [
          "{projectRoot}/src/index.ts"
        ],
        "injectGlobals": true
      }
    },
    "lint": {},
    "test": {
      "options": {
        "checkLeaks": false,
        "ciEnvironments": [
          "nodejs"
        ],
        "forceExit": true
      }
    }
  },
  "implicitDependencies": [
    "esbuild",
    "test"
  ]
}

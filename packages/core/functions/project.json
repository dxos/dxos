{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "functions",
  "tags": [
    "scope:core"
  ],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "compile": {
      "options": {
        "entryPoints": [
          "{projectRoot}/src/index.ts",
          "{projectRoot}/src/testing/index.ts",
          "{projectRoot}/src/types.ts"
        ],
        "injectGlobals": true
      }
    },
    "lint": {},
    "postbuild": {
      "executor": "nx:run-script",
      "options": {
        "script": "gen-schema"
      }
    },
    "test": {
      "options": {
        "environments": [
          "nodejs"
        ],
        "forceExit": true
      }
    }
  },
  "implicitDependencies": [
    "esbuild",
    "test"
  ]
}

{
  "sourceRoot": "packages/core/mesh/broadcast/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/core/mesh/broadcast/src/index.ts",
        "outputPath": "packages/core/mesh/broadcast/dist",
        "transformers": [
          "@dxos/log-hook/transformer"
        ],
        "tsConfig": "packages/core/mesh/broadcast/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/core/mesh/broadcast/**/*.{ts,js}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@dxos/mocha:mocha",
      "options": {
        "ciEnvironments": [
          "nodejs"
        ],
        "coveragePath": "coverage/packages/core/mesh/broadcast",
        "outputPath": "tmp/mocha/packages/core/mesh/broadcast",
        "resultsPath": "test-results/packages/core/mesh/broadcast",
        "testPatterns": [
          "packages/core/mesh/broadcast/src/**/*.test.{ts,js}"
        ],
        "watchPatterns": [
          "packages/core/mesh/broadcast/src/**/*"
        ]
      },
      "outputs": [
        "{options.coveragePath}",
        "{options.outputPath}",
        "{options.resultsPath}"
      ]
    }
  },
  "implicitDependencies": [
    "mocha"
  ]
}

{
  "sourceRoot": "packages/core/protocols/src",
  "projectType": "library",
  "targets": {
    "compile": {
      "dependsOn": [
        "compile-lib",
        "compile-node"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "true"
        ]
      }
    },
    "compile-lib": {
      "dependsOn": [
        "^compile",
        "prebuild"
      ],
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/core/protocols/src/index.ts",
        "outputPath": "packages/core/protocols/dist/esm",
        "transformers": [
          "@dxos/log-hook/transformer"
        ],
        "tsConfig": "packages/core/protocols/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile-node": {
      "dependsOn": [
        "^compile",
        "prebuild"
      ],
      "executor": "nx:run-script",
      "options": {
        "script": "tsc-cjs"
      },
      "outputs": [
        "packages/core/protocols/dist/cjs"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/core/protocols/**/*.{ts,js}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "prebuild": {
      "dependsOn": [
        "^build",
        "^compile"
      ],
      "executor": "@dxos/protobuf-compiler:generate",
      "options": {
        "basePath": "packages/core/protocols/src/proto"
      },
      "outputs": [
        "packages/core/protocols/proto",
        "{options.basePath}/gen"
      ]
    },
    "test": {
      "dependsOn": [
        "^compile",
        "prebuild"
      ],
      "executor": "@dxos/test:run",
      "options": {
        "coveragePath": "coverage/packages/core/protocols",
        "outputPath": "tmp/mocha/packages/core/protocols",
        "resultsPath": "test-results/packages/core/protocols",
        "testPatterns": [
          "packages/core/protocols/src/**/*.test.{ts,js}"
        ],
        "watchPatterns": [
          "packages/core/protocols/src/**/*"
        ]
      },
      "outputs": [
        "{options.coveragePath}",
        "{options.outputPath}",
        "{options.resultsPath}"
      ]
    }
  },
  "implicitDependencies": [
    "protobuf-compiler",
    "test"
  ]
}

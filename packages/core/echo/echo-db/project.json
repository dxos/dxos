{
  "sourceRoot": "packages/core/echo/echo-db/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/core/echo/echo-db/src/index.ts",
          "packages/core/echo/echo-db/src/testing/index.ts"
        ],
        "injectGlobals": true,
        "outputPath": "packages/core/echo/echo-db/dist/lib"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {},
    "test": {
      "executor": "@dxos/test:run",
      "options": {
        "envVariables": {
          "SIGNAL_PORT": 12000
        },
        "forceExit": true,
        "setup": "packages/core/mesh/signal/testing/setup.js",
        "setupOptions": {
          "port": 12000
        }
      }
    }
  },
  "implicitDependencies": [
    "esbuild",
    "test"
  ]
}

{
  "sourceRoot": "packages/common/codec-protobuf/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/common/codec-protobuf/dist",
        "tsConfig": "packages/common/codec-protobuf/tsconfig.json",
        "main": "packages/common/codec-protobuf/src/index.ts",
        "updateBuildableProjectDepsInPackageJson": false,
        "assets": ["packages/common/codec-protobuf/*.md"]
      }
    },
    "bundle": {
      "executor": "@dxos/esbuild:bundle",
      "outputs": [
        "{options.outfile}"
      ],
      "options": {
        "entryPoints": [
          "packages/common/codec-protobuf/src/index.ts"
        ],
        "outfile": "packages/common/codec-protobuf/dist/browser.js",
        "bundlePackages": [
          "protobufjs"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/common/codec-protobuf/**/*.{ts,js}"
        ]
      }
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

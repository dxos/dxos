{
  "sourceRoot": "packages/common/crypto/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/common/crypto/dist",
        "tsConfig": "packages/common/crypto/tsconfig.json",
        "main": "packages/common/crypto/src/index.ts"
      }
    },
    "bundle": {
      "executor": "@dxos/esbuild:bundle",
      "outputs": [
        "{options.outfile}"
      ],
      "options": {
        "entryPoints": [
          "packages/common/crypto/src/platform/index.ts"
        ],
        "outfile": "packages/common/crypto/dist/src/platform/browser.js",
        "bundlePackages": [
          "node:crypto"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/common/crypto/**/*.{ts,js}"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/common/crypto"
      ],
      "options": {
        "jestConfig": "packages/common/crypto/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}

{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "plate",
  "tags": [
    "scope:common"
  ],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "compile": {
      "options": {
        "entryPoints": [
          "{projectRoot}/src/index.ts",
          "{projectRoot}/src/main.ts"
        ],
        "platforms": [
          "node"
        ]
      }
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "executor": "nx:run-script",
      "options": {
        "script": "dev"
      }
    },
    "lint": {},
    "test": {
      "options": {
        "checkLeaks": false,
        "ciEnvironments": [
          "nodejs"
        ],
        "forceExit": true
      }
    }
  },
  "implicitDependencies": [
    "esbuild",
    "test"
  ]
}

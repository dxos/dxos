{
  "sourceRoot": "packages/common/telemetry/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/common/telemetry/src/index.ts",
        "outputPath": "packages/common/telemetry/dist",
        "tsConfig": "packages/common/telemetry/tsconfig.json",
        "transformers": [
          "@dxos/log-hook/transformer"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "bundle": {
      "executor": "@dxos/esbuild:bundle",
      "options": {
        "bundlePackages": [
          "@segment/snippet"
        ],
        "entryPoints": [
          "packages/common/telemetry/src/index.ts"
        ],
        "outfile": "packages/common/telemetry/dist/browser.js"
      },
      "outputs": [
        "{options.outfile}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/common/telemetry/**/*.{ts,js}"
        ],
        "format": "unix"
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "toolbox": {
      "executor": "@dxos/toolbox:exec"
    }
  }
}

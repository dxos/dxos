{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "protobuf-compiler",
  "tags": [
    "scope:common"
  ],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {
      "options": {
        "outputPath": "{projectRoot}/dist"
      }
    },
    "lint": {},
    "prebuild": {
      "dependsOn": [
        "^build",
        "^compile"
      ],
      "executor": "nx:run-script",
      "options": {
        "script": "prebuild"
      },
      "outputs": [
        "{projectRoot}/test/proto/gen"
      ]
    },
    "test": {
      "dependsOn": [
        "prebuild"
      ],
      "executor": "nx:run-script",
      "options": {
        "script": "test"
      }
    }
  }
}

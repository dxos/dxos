{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "cli": "nx",
  "properties": {
    "basePath": {
      "type": "string"
    },
    "srcPath": {
      "type": "string",
      "default": "**/*.proto"
    },
    "outputPath": {
      "type": "string",
      "default": "gen"
    },
    "substitutionsPath": {
      "type": "string",
      "default": "substitutions.ts"
    },
    "compress": {
      "type": "boolean",
      "default": true
    },
    "exportPath": {
      "type": "string",
      "description": "Directory for compiled proto definitions.",
      "examples": [
        "dist/src/proto/gen"
      ]
    }
  },
  "required": ["basePath"]
}

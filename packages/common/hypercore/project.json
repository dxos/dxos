{
  "sourceRoot": "packages/common/hypercore/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/common/hypercore/src/index.ts",
        "outputPath": "packages/common/hypercore/dist/types",
        "tsConfig": "packages/common/hypercore/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "alias": {
          "events": "node:events",
          "hypercore-default-storage": "./src/empty",
          "os": "node:os",
          "timers": "node:timers",
          "tty": "node:tty",
          "util": "node:util"
        },
        "bundlePackages": [
          "abstract-extension",
          "atomic-batcher",
          "b4a",
          "bitfield-rle",
          "buffer-alloc",
          "buffer-alloc-unsafe",
          "buffer-fill",
          "clone",
          "codecs",
          "count-trailing-zeros",
          "debug",
          "fast-bitfield",
          "flat-tree",
          "has-flag",
          "hmac-blake2b",
          "hypercore",
          "hypercore-cache",
          "hypercore-crypto",
          "hypercore-default-storage",
          "hypercore-protocol",
          "hypercore-streams",
          "inherits",
          "inspect-custom-symbol",
          "last-one-wins",
          "memory-pager",
          "merkle-tree-stream",
          "ms",
          "nanoassert",
          "nanoguard",
          "nanoresource",
          "noise-protocol",
          "pretty-hash",
          "protocol-buffers-encodings",
          "signed-varint",
          "simple-handshake",
          "simple-hypercore-protocol",
          "simple-message-channels",
          "sparse-bitfield",
          "supports-color",
          "timeout-refresh",
          "uint64be",
          "unordered-array-remove",
          "unordered-set",
          "varint",
          "xsalsa20",
          "xsalsa20-universal"
        ],
        "entryPoints": [
          "packages/common/hypercore/src/index.ts"
        ],
        "injectGlobals": true,
        "outputPath": "packages/common/hypercore/dist/lib"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/common/hypercore/**/*.{ts,js}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@dxos/test:run",
      "options": {
        "coveragePath": "coverage/packages/common/hypercore",
        "outputPath": "tmp/mocha/packages/common/hypercore",
        "resultsPath": "test-results/packages/common/hypercore",
        "testPatterns": [
          "packages/common/hypercore/src/**/*.test.{ts,js}"
        ],
        "watchPatterns": [
          "packages/common/hypercore/src/**/*"
        ]
      },
      "outputs": [
        "{options.coveragePath}",
        "{options.outputPath}",
        "{options.resultsPath}"
      ]
    }
  },
  "implicitDependencies": [
    "esbuild",
    "test"
  ]
}

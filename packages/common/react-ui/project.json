{
  "sourceRoot": "packages/common/react-ui/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "assets": [
          "packages/common/react-ui/src/theme.css"
        ],
        "main": "packages/common/react-ui/src/index.ts",
        "outputPath": "packages/common/react-ui/dist",
        "tsConfig": "packages/common/react-ui/tsconfig.json",
        "transformers": [
          "@dxos/log-hook/transformer"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/common/react-ui/src/**/*.{js,jsx,ts,tsx}"
        ],
        "format": "unix"
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "config": {
          "configFolder": "packages/common/react-ui/.storybook"
        },
        "uiFramework": "@storybook/react"
      }
    },
    "toolbox": {
      "executor": "@dxos/toolbox:exec"
    }
  }
}

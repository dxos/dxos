{
  "sourceRoot": "packages/common/react-ui/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/common/react-ui/src/index.ts",
        "outputPath": "packages/common/react-ui/dist/types",
        "tsConfig": "packages/common/react-ui/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile-lib": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/common/react-ui/src/index.ts"
        ],
        "outputPath": "packages/common/react-ui/dist/lib",
        "platforms": ["browser"]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile-plugin": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/common/react-ui/src/plugin.ts",
          "packages/common/react-ui/src/theme.css"
        ],
        "outputPath": "packages/common/react-ui/dist/plugin",
        "platforms": ["node"]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx compile-lib react-ui",
          "nx compile-plugin react-ui"
        ],
        "parallel": true
      },
      "outputs": [
        "packages/common/react-ui/dist/lib",
        "packages/common/react-ui/dist/plugin"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/common/react-ui/src/**/*.{js,jsx,ts,tsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "config": {
          "configFolder": "packages/common/react-ui/.storybook"
        },
        "uiFramework": "@storybook/react"
      }
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

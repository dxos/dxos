{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "process",
  "tags": [
    "scope:common"
  ],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {
      "options": {
        "main": "{projectRoot}/src/index.ts",
        "outputPath": "{projectRoot}/dist",
        "tsConfig": "{projectRoot}/tsconfig.json"
      }
    },
    "lint": {
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.{ts,js,tsx,jsx}"
        ],
        "quiet": true
      },
      "outputs": [
        "{options.outputFile}"
      ]
    }
  }
}

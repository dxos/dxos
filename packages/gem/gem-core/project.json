{
  "sourceRoot": "packages/gem/gem-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/gem/gem-core/src/index.ts",
        "outputPath": "packages/gem/gem-core/dist",
        "tsConfig": "packages/gem/gem-core/tsconfig.json",
        "transformers": [
          "@dxos/log-hook/transformer"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/gem/gem-core/**/*.{ts,tsx,js,jsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "packages/gem/gem-core/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": [
        "packages/gem/gem-core/coverage"
      ]
    },
    "toolbox": {
      "executor": "@dxos/toolbox:exec"
    }
  },
  "tags": [
    "scope:gem"
  ]
}

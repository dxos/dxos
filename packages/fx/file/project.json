{
  "sourceRoot": "packages/fx/file/src",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/fx/file/dist",
        "tsConfig": "packages/fx/file/tsconfig.json",
        "main": "packages/fx/file/src/index.ts"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/fx/file/**/*.{ts,js}"
        ]
      }
    }
  }
}

{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main",
    "popover"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "deep-link:default",
    "os:default",
    "process:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "args": [
            "serve"
          ],
          "name": "sidecar/ollama",
          "sidecar": true
        }
      ]
    },
    "opener:default","opener:allow-open-url","opener:allow-default-urls","shell:allow-open"
  ]
}
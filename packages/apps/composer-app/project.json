{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "composer-app",
  "sourceRoot": "packages/apps/composer-app/src",
  "projectType": "library",
  "targets": {
    "build": {
      "options": {
        "main": "{projectRoot}/src/index.ts",
        "outputPath": "{projectRoot}/dist",
        "transformers": [
          "@dxos/log-hook/transformer"
        ],
        "tsConfig": "{projectRoot}/tsconfig.json"
      }
    },
    "bundle-app": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "executor": "@nx/vite:build",
      "inputs": [
        "production",
        "^production",
        {
          "env": "CONFIG_DYNAMIC"
        },
        {
          "env": "DX_ENVIRONMENT"
        },
        {
          "env": "DX_IPDATA_API_KEY"
        },
        {
          "env": "DX_SENTRY_DESTINATION"
        },
        {
          "env": "DX_TELEMETRY_API_KEY"
        },
        {
          "env": "DX_HOST"
        },
        {
          "env": "NODE_ENV"
        },
        {
          "env": "REMOTE_SOURCE"
        },
        {
          "env": "LOG_FILTER"
        },
        {
          "env": "LOG_PREFIX"
        },
        {
          "env": "SENTRY_RELEASE_AUTH_TOKEN"
        }
      ],
      "options": {
        "generatePackageJson": false,
        "outputPath": "{projectRoot}/out/composer"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "bundle": {
      // Don't cache because this is writing into the output of the app bundle
      // which is already a cached directory.
      "cache": false,
      "dependsOn": [
        "bundle-app"
      ],
      "executor": "nx:run-script",
      "options": {
        "script": "build:functions"
      }
    },
    "e2e": {
      "options": {
        "playwrightConfigPath": "packages/apps/composer-app/src/playwright/playwright.config.ts",
        "serve": "composer-app:preview",
        "testPatterns": [
          "packages/apps/composer-app/src/playwright/**/*.spec.{ts,js}"
        ],
        "watchPatterns": [
          "packages/apps/composer-app/src/**/*"
        ]
      }
    },
    "lint": {},
    "preview": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "composer-app:bundle",
        "staticFilePath": "packages/apps/composer-app/out/composer"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "composer-app:bundle"
      }
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "packages/apps/composer-app/.storybook"
      }
    },
    "test": {
      "options": {
        "forceExit": true
      }
    }
  },
  "implicitDependencies": [
    "test"
  ]
}

{
  "sourceRoot": "packages/apps/quickstart/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/apps/quickstart/src/index.ts",
        "outputPath": "packages/apps/quickstart/dist",
        "transformers": [
          "@dxos/log-hook/transformer"
        ],
        "tsConfig": "packages/apps/quickstart/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "bundle": {
      "executor": "@nrwl/vite:build",
      "options": {
        "outputPath": "packages/apps/quickstart/out/quickstart"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/apps/quickstart/**/*.{ts,js,tsx,jsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "options": {
        "buildTarget": "quickstart:bundle"
      }
    },
    "serve-with-halo": {
      "dependsOn": [
        "^build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx serve halo-app"
          },
          {
            "command": "nx serve quickstart"
          }
        ],
        "parallel": true
      }
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "config": {
          "configFolder": "packages/common/react-components/.storybook"
        },
        "uiFramework": "@storybook/react"
      }
    }
  }
}

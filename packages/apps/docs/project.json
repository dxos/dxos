{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "root": "packages/apps/docs",
  "projectType": "application",
  "targets": {
    // TODO(wittjosiah): Run as apart of release please to ensure api docs are up to date.
    "prerelease": {
      "executor": "nx:run-script",
      "outputs": [
        "packages/apps/docs/docs/api",
        "packages/apps/docs/docs/.vuepress/dist"
      ],
      "options": {
        "script": "prerelease"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/apps/docs/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  }
}

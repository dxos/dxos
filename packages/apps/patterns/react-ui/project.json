{
  "sourceRoot": "packages/apps/patterns/react-ui/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/apps/patterns/react-ui/src/index.ts",
        "outputPath": "packages/apps/patterns/react-ui/dist/types",
        "tsConfig": "packages/apps/patterns/react-ui/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/apps/patterns/react-ui/src/index.ts",
          "packages/apps/patterns/react-ui/src/testing/index.ts"
        ],
        "outputPath": "packages/apps/patterns/react-ui/dist/lib",
        "platforms": [
          "browser"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "e2e": {
      "executor": "@dxos/test:run",
      "options": {
        "coveragePath": "coverage/packages/apps/patterns/react-ui",
        "outputPath": "tmp/playwright/packages/apps/patterns/react-ui",
        "playwrightConfigPath": "packages/apps/patterns/react-ui/src/playwright/playwright.config.ts",
        "resultsPath": "test-results/packages/apps/patterns/react-ui",
        "serve": "react-ui:storybook",
        "testPatterns": [
          "packages/apps/patterns/react-ui/src/playwright/**/*.spec.{ts,js}"
        ],
        "timeout": 60000,
        "watchPatterns": [
          "packages/apps/patterns/react-ui/src/**/*"
        ]
      },
      "outputs": [
        "{options.coveragePath}",
        "{options.outputPath}",
        "{options.resultsPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/apps/patterns/react-ui/src/**/*.{js,jsx,ts,tsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "config": {
          "configFolder": "packages/apps/patterns/react-ui/.storybook"
        },
        "uiFramework": "@storybook/react"
      }
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

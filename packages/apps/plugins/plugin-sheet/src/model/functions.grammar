@top Function {
  FunctionInvocation
}

FunctionInvocation {
  Identifier "(" list<Argument> ")"
}

Argument {
  FunctionInvocation | Range | String | Number | Boolean
}

@tokens {
  String { '"' (!["\\] | "\\" _)* '"' }
  Number { @digit+ }
  Boolean { "#t" | "#f" }
  Position { $[a-zA-Z]+ @digit+ }
  Range { Position ":" Position }

  Identifier { $[a-zA-Z]$[a-zA-Z0-9_]* }

  @precedence { Position, Range, Identifier }
}

list<item> {
  item item*
}

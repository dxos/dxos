{
  "sourceRoot": "packages/apps/plugins/plugin-registry/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/apps/plugins/plugin-registry/src/index.ts",
        "outputPath": "packages/apps/plugins/plugin-registry/dist/types",
        "tsConfig": "packages/apps/plugins/plugin-registry/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/apps/plugins/plugin-registry/src/index.ts",
          "packages/apps/plugins/plugin-registry/src/meta.ts"
        ],
        "outputPath": "packages/apps/plugins/plugin-registry/dist/lib",
        "platforms": [
          "browser"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {},
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "packages/apps/plugins/plugin-registry/.storybook"
      }
    },
    "test": {
      "executor": "@dxos/test:run",
      "options": {
        "forceExit": true,
        "testPatterns": [
          "packages/apps/plugins/plugin-registry/src/**/*.test.{ts,js}"
        ],
        "watchPatterns": [
          "packages/apps/plugins/plugin-registry/src/**/*"
        ]
      }
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

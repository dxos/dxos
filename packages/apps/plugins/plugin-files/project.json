{
  "sourceRoot": "packages/apps/plugins/plugin-files/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/apps/plugins/plugin-files/src/index.ts",
        "outputPath": "packages/apps/plugins/plugin-files/dist/types",
        "tsConfig": "packages/apps/plugins/plugin-files/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/apps/plugins/plugin-files/src/index.ts"
        ],
        "outputPath": "packages/apps/plugins/plugin-files/dist/lib",
        "platforms": [
          "browser"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/apps/plugins/plugin-files/src/**/*.{js,jsx,ts,tsx}"
        ],
        "quiet": true
      },
      "outputs": [
        "{options.outputFile}"
      ]
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

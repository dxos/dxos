{
  "sourceRoot": "packages/apps/plugins/plugin-drawing/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/apps/plugins/plugin-drawing/src/index.ts",
        "outputPath": "packages/apps/plugins/plugin-drawing/dist/types",
        "tsConfig": "packages/apps/plugins/plugin-drawing/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/apps/plugins/plugin-drawing/src/index.ts"
        ],
        "outputPath": "packages/apps/plugins/plugin-drawing/dist/lib",
        "platforms": [
          "browser"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/apps/plugins/plugin-drawing/src/**/*.{js,jsx,ts,tsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "packages/apps/plugins/plugin-drawing/.storybook"
      }
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

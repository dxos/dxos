{
  "sourceRoot": "packages/apps/vanilla-app/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/apps/vanilla-app/**/*.{ts,js,tsx,jsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "config": {
          "configFolder": "packages/common/react-components/.storybook"
        },
        "uiFramework": "@storybook/react"
      }
    }
  }
}

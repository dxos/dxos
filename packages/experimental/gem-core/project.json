{
  "sourceRoot": "packages/experimental/gem-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/experimental/gem-core/src/index.ts",
        "outputPath": "packages/experimental/gem-core/dist",
        "transformers": [
          "@dxos/log-hook/transformer"
        ],
        "tsConfig": "packages/experimental/gem-core/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/experimental/gem-core/**/*.{ts,tsx,js,jsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "packages/experimental/gem-core/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": [
        "packages/experimental/gem-core/coverage"
      ]
    }
  }
}

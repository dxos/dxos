{
  "sourceRoot": "packages/experimental/hypercard/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/experimental/hypercard/src/index.ts",
        "outputPath": "packages/experimental/hypercard/dist/types",
        "tsConfig": "packages/experimental/hypercard/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "bundle": {
      "executor": "@nrwl/vite:build",
      "inputs": [
        {
          "env": "CONFIG_DYNAMIC"
        },
        {
          "env": "DX_VAULT"
        },
        {
          "env": "VITE_DEBUG"
        },
        {
          "env": "VITE_DEV"
        },
        {
          "env": "VITE_PWA"
        },
        "^production",
        "production"
      ],
      "options": {
        "outputPath": "packages/experimental/hypercard/out/hypercard"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/experimental/hypercard/src/index.ts"
        ],
        "outputPath": "packages/experimental/hypercard/dist/lib"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "e2e": {
      "executor": "@dxos/test:run",
      "options": {
        "coveragePath": "coverage/packages/experimental/hypercard",
        "outputPath": "tmp/mocha/packages/experimental/hypercard",
        "playwright": true,
        "resultsPath": "test-results/packages/experimental/hypercard",
        "serve": "hypercard:preview",
        "testPatterns": [
          "packages/experimental/hypercard/src/playwright/**/*.spec.{ts,js}"
        ],
        "watchPatterns": [
          "packages/experimental/hypercard/src/**/*"
        ]
      },
      "outputs": [
        "{options.coveragePath}",
        "{options.outputPath}",
        "{options.resultsPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/experimental/hypercard/**/*.{ts,tsx,js,jsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "preview": {
      "executor": "@nrwl/web:file-server",
      "options": {
        "buildTarget": "hypercard:bundle",
        "staticFilePath": "packages/experimental/hypercard/out/hypercard"
      }
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "options": {
        "buildTarget": "hypercard:bundle"
      }
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "config": {
          "configFolder": "packages/experimental/hypercard/.storybook"
        },
        "uiFramework": "@storybook/react"
      }
    },
    "test": {
      "executor": "@dxos/test:run",
      "options": {
        "ciEnvironments": [
          "nodejs"
        ],
        "coveragePath": "coverage/packages/experimental/hypercard",
        "outputPath": "tmp/mocha/packages/experimental/hypercard",
        "resultsPath": "test-results/packages/experimental/hypercard",
        "testPatterns": [
          "packages/experimental/hypercard/src/**/*.test.{ts,js}"
        ],
        "watchPatterns": [
          "packages/experimental/hypercard/src/**/*"
        ]
      },
      "outputs": [
        "{options.coveragePath}",
        "{options.outputPath}",
        "{options.resultsPath}"
      ]
    }
  },
  "implicitDependencies": [
    "test"
  ]
}

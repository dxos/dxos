{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "shell",
  "tags": [
    "scope:sdk"
  ],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "bundle": {
      "dependsOn": [
        "^build",
        "compile"
      ],
      "executor": "@nx/vite:build",
      "options": {
        "generatePackageJson": false,
        "outputPath": "packages/sdk/shell/dist/bundle"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "options": {
        "entryPoints": [
          "{projectRoot}/src/react.ts",
          "{projectRoot}/src/testing/index.ts"
        ],
        "platforms": [
          "browser"
        ]
      }
    },
    "e2e": {
      "dependsOn": [
        "^compile",
        "stories:mkdist"
      ],
      "options": {
        "playwrightConfigPath": "{projectRoot}/src/playwright/playwright.config.ts",
        "serve": "stories:storybook-e2e",
        "testPatterns": [
          "{projectRoot}/src/playwright/**/*.spec.{ts,js}"
        ],
        "watchPatterns": [
          "{projectRoot}/src/**/*"
        ]
      }
    },
    "lint": {
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

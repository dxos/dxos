{
  "sourceRoot": "packages/sdk/vite-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/sdk/vite-plugin/src/index.ts",
        "outputPath": "packages/sdk/vite-plugin/dist/types",
        "tsConfig": "packages/sdk/vite-plugin/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/sdk/vite-plugin/src/index.ts"
        ],
        "outputPath": "packages/sdk/vite-plugin/dist/lib",
        "platforms": [
          "node"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/sdk/vite-plugin/**/*.{ts,js}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    }
  }
}

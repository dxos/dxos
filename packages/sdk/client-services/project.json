{
  "sourceRoot": "packages/sdk/client-services/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/sdk/client-services/src/index.ts",
          "packages/sdk/client-services/src/packlets/testing/index.ts"
        ],
        "injectGlobals": true,
        "outputPath": "packages/sdk/client-services/dist/lib"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {},
    "test": {
      "executor": "@dxos/test:run",
      "options": {
        "checkLeaks": false,
        "ciEnvironments": [
          "chromium",
          "firefox",
          "nodejs"
        ],
        "envVariables": {
          "SIGNAL_PORT": 12004
        },
        "forceExit": true,
        "setup": "packages/core/mesh/signal/testing/setup.js",
        "setupOptions": {
          "port": 12004
        }
      }
    }
  },
  "implicitDependencies": [
    "esbuild",
    "test"
  ]
}

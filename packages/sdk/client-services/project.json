{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "client-services",
  "tags": [
    "scope:sdk"
  ],
  "sourceRoot": "packages/sdk/client-services/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "compile": {
      "options": {
        "entryPoints": [
          "packages/sdk/client-services/src/index.ts",
          "packages/sdk/client-services/src/testing/index.ts"
        ],
        "injectGlobals": true
      }
    },
    "lint": {},
    "test": {
      "options": {
        "checkLeaks": false,
        "ciEnvironments": [
          "chromium",
          "firefox",
          "nodejs"
        ],
        "envVariables": {
          "SIGNAL_PORT": 12004
        },
        "forceExit": true,
        "setup": "packages/core/mesh/signal/testing/setup.js",
        "setupOptions": {
          "port": 12004
        }
      }
    }
  },
  "implicitDependencies": [
    "esbuild",
    "test"
  ]
}

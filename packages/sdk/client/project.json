{
  "sourceRoot": "packages/sdk/client/src",
  "projectType": "library",
  "targets": {
    "proto": {
      "executor": "@dxos/protobuf-compiler:generate",
      "outputs": [
        "{options.basePath}{options.outputPath}"
      ],
      "options": {
        "basePath": "packages/sdk/client/src/packlets/proto/"
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/sdk/client/dist",
        "tsConfig": "packages/sdk/client/tsconfig.json",
        "main": "packages/sdk/client/src/index.ts"
      },
      "dependsOn": [
        "^build",
        "^bundle",
        "proto",
        "prebuild"
      ]
    },
    "bundle": {
      "executor": "@dxos/esbuild:bundle",
      "outputs": [
        "{options.outfile}"
      ],
      "options": {
        "entryPoints": [
          "packages/sdk/client/src/index.ts"
        ],
        "outfile": "packages/sdk/client/dist/browser.js",
        "bundlePackages": [
          "@dxos/credentials",
          "@dxos/crypto",
          "@dxos/echo-db",
          "@dxos/echo-protocol",
          "@dxos/feed-store",
          "@dxos/network-manager",
          "@dxos/object-model"
        ]
      },
      "dependsOn": [
        "^bundle",
        "build",
        "proto",
        "prebuild"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/sdk/client/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "implicitDependencies": [
    "esbuild",
    "protobuf-compiler"
  ]
}

    //   "options": {
    //     "entryPoints": [
    //       "packages/sdk/client/src/index.ts"
    //     ],
    //     "outfile": "packages/sdk/client/dist/browser.js",
    //     "bundlePackages": [
    //       "@dxos/credentials",
    //       "@dxos/crypto",
    //       "@dxos/echo-db",
    //       "@dxos/echo-protocol",
    //       "@dxos/feed-store",
    //       "@dxos/network-manager",
    //       "@dxos/object-model"
    //     ]
    //   },
    //   "dependsOn": [
    //     "^build",
    //     "^bundle",
    //     "proto",
    //     "prebuild"
    //   ]
    // },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/sdk/client/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "implicitDependencies": [
    "esbuild",
    "protobuf-compiler"
  ]
}

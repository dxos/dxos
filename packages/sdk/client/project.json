{
  "sourceRoot": "packages/sdk/client/src",
  "projectType": "library",
  "targets": {
    "proto": {
      "executor": "@dxos/protobuf-compiler:generate",
      "outputs": [
        "{options.basePath}{options.outputPath}"
      ],
      "options": {
        "basePath": "packages/sdk/client/src/packlets/proto/"
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/sdk/client/dist",
        "tsConfig": "packages/sdk/client/tsconfig.json",
        "main": "packages/sdk/client/src/index.ts",
        "updateBuildableProjectDepsInPackageJson": false,
        "assets": ["packages/sdk/client/*.md"]
      },
      "dependsOn": [
        "^build",
        "^bundle",
        "proto",
        "prebuild"
      ]
    },
    // TODO(wittjosiah): Failing to resolve config browser mapping for some reason.

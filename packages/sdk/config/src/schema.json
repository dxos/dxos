{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "storage": {
      "type": "object",
      "properties": {
        "persistent": {
          "type": "boolean"
        },
        "type": {
          "type": "string",
          "enum": [
            "ram",
            "idb",
            "chrome",
            "firefox",
            "node"
          ]
        },
        "keyStorage": {
          "type": "string",
          "enum": [
            "ram",
            "leveljs",
            "jsondown"
          ]
        },
        "path": {
          "type": "string"
        }
      }
    },
    "swarm": {
      "type": "object",
      "properties": {
        "signal": {
          "type": [
            "string",
            "array"
          ],
          "items": {
            "type": "string"
          }
        },
        "ice": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "urls": {
                "type": "string"
              },
              "username": {
                "type": "string"
              },
              "credential": {
                "type": "string"
              }
            },
            "required": [
              "urls"
            ],
            "additionalProperties": false
          }
        }
      }
    },
    "wns": {
      "type": "object",
      "properties": {
        "server": {
          "type": "string"
        },
        "chainId": {
          "type": "string"
        }
      },
      "required": [
        "server",
        "chainId"
      ],
      "additionalProperties": false
    },
    "ipfs": {
      "type": "object",
      "properties": {
        "server": {
          "type": "string"
        },
        "gateway": {
          "type": "string"
        }
      },
      "required": [
        "server",
        "gateway"
      ],
      "additionalProperties": false
    },
    "snapshots": {
      "type": "boolean"
    },
    "snapshotInterval": {
      "type": "integer"
    },
    "invitationExpiration": {
      "type": "integer"
    }
  }
}

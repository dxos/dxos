{
  "sourceRoot": "packages/sdk/observability/src",
  "projectType": "library",
  "targets": {
    "build": {
      "options": {
        "main": "packages/sdk/observability/src/index.ts",
        "outputPath": "packages/sdk/observability/dist/types",
        "tsConfig": "packages/sdk/observability/tsconfig.json"
      }
    },
    "compile": {
      "options": {
        "entryPoints": [
          "packages/sdk/observability/src/datadog/index.ts",
          "packages/sdk/observability/src/index.ts"
        ],
        "outputPath": "packages/sdk/observability/dist/lib",
        "transformers": [
          "@dxos/log-hook/transformer"
        ],
        "tsConfig": "packages/sdk/observability/tsconfig.json"
      }
    },
    "lint": {
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/sdk/observability/**/*.{ts,js}?(x)"
        ],
        "quiet": true
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "prebuild": {
      "executor": "nx:run-script",
      "inputs": [
        {
          "env": "NODE_ENV"
        },
        {
          "env": "DX_ENVIRONMENT"
        },
        {
          "env": "DX_IPDATA_API_KEY"
        },
        {
          "env": "DX_SENTRY_DESTINATION"
        },
        {
          "env": "DX_TELEMETRY_API_KEY"
        },
        "^production",
        "default"
      ],
      "options": {
        "script": "api-keys"
      },
      "outputs": [
        "packages/sdk/observability/src/cli-observability-secrets.json"
      ]
    }
  },
  "implicitDependencies": [
    "esbuild",
    "test"
  ]
}

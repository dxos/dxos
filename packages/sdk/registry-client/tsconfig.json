{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "noImplicitAny": false,
    "outDir": "dist",
    "paths": {
      "@polkadot/api/augment": [
        "./src/polkadot/interfaces/augment-api.ts"
      ],
      "@polkadot/types/augment": [
        "./src/polkadot/interfaces/augment-types.ts"
      ],
      "sample-polkadotjs-typegen/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src",
    "test"
  ],
  "references": [
    {
      "path": "../../common/codec-protobuf"
    },
    {
      "path": "../../common/debug"
    },
    {
      "path": "../../common/protocols"
    },
    {
      "path": "../../common/util"
    },
    {
      "path": "../../halo/credentials"
    },
    {
      "path": "../client"
    },
    {
      "path": "../config"
    }
  ]
}

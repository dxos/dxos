{
  "name": "@dxos/registry-api",
  "version": "0.4.1",
  "description": "DXNS API",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "license": "AGPL-3.0",
  "author": "DXOS.org",
  "scripts": {
    "build": "rm -rf ./dist && toolchain generate:proto && tsc",
    "generate:types": "toolchain generate:defs && yarn generate:meta && yarn generate:proto",
    "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package sample-polkadotjs-typegen/interfaces --input ./src/interfaces",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package sample-polkadotjs-typegen/interfaces --endpoint ws://127.0.0.1:9944 --output ./src/interfaces",
    "generate:proto": "build-protobuf src/defs/dxns/*.proto --substitutions src/defs/substitutions.ts -o src/defs/gen",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "NODE_ENV=test mocha '{src,test}/**/*.?(int-)test.{ts,tsx}'",
    "test:unit": "NODE_ENV=test mocha '{src,test}/**/*.test.ts'",
    "test:int": "NODE_ENV=test mocha '{src,test,int}/**/*.int-test.ts'",
    "test:int:registry": "NODE_ENV=test mocha '{src,test,int}/**/registry-api.int-test.ts'",
    "test:int:auctions": "NODE_ENV=test mocha '{src,test,int}/**/auctions-api.int-test.ts'"
  },
  "dependencies": {
    "@dxos/codec-protobuf": "workspace:*",
    "@dxos/util": "workspace:*",
    "@polkadot/api": "4.17.1",
    "crypto": "^1.0.1",
    "faker": "^5.1.0",
    "fs-extra": "^8.1.0",
    "multihashes": "^4.0.2",
    "protobufjs": "^6.9.0",
    "@polkadot/types": "~6.1.2"
  },
  "devDependencies": {
    "@dxos/eslint-plugin": "~1.0.14",
    "@dxos/protobuf-compiler": "workspace:*",
    "@dxos/toolchain-node-library": "workspace:*",
    "@types/faker": "~5.5.1",
    "@polkadot/typegen": "^4.17.1",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/fs-extra": "^9.0.4",
    "@types/mocha": "~8.2.2",
    "@types/node": "^14.0.9",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.7.0",
    "eslint-config-semistandard": "^15.0.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "mocha": "~8.4.0",
    "semistandard": "^16.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@dxos/recomended"
    ],
    "plugins": [
      "eslint-plugin-mocha"
    ],
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "src/defs/gen/*"
    ],
    "rules": {
      "no-useless-constructor": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.ts",
          "**/*.int-test.ts"
        ],
        "rules": {
          "@typescript-eslint/no-non-null-assertion": "off",
          "no-unused-expressions": "off",
          "no-use-before-define": "off",
          "jest/valid-expect": "off"
        }
      }
    ]
  },
  "engines": {
    "node": ">= 14"
  },
  "publishConfig": {
    "access": "public"
  }
}

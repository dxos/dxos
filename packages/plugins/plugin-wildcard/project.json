{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "plugin-wildcard",
  "tags": [
    "scope:plugins"
  ],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "compile": {
      "options": {
        "entryPoints": [
          "{projectRoot}/src/index.ts",
          "{projectRoot}/src/meta.ts"
        ],
        "platforms": [
          "browser"
        ]
      }
    },
    "lint": {
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.{js,jsx,ts,tsx}"
        ],
        "quiet": true
      },
      "outputs": [
        "{options.outputFile}"
      ]
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

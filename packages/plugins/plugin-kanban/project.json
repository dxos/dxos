{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "plugin-kanban",
  "tags": ["scope:experimental", "scope:plugins"],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "compile": {
      "options": {
        "entryPoints": ["{projectRoot}/src/index.ts", "{projectRoot}/src/types/index.ts"],
        "platforms": ["browser", "node"],
        "preactSignalTracking": true
      }
    },
    "lint": {},
    "pack": {},
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "tools/stories/.storybook",
        "stories": []
      }
    }
  },
  "implicitDependencies": ["esbuild", "node-std"]
}

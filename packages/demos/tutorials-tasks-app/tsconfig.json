{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ESNext",
      "ES6"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "playwright",
    "src",
    "stories"
  ],
  "references": [
    {
      "path": "../../common/crypto"
    },
    {
      "path": "../../echo/echo-db"
    },
    {
      "path": "../../echo/object-model"
    },
    {
      "path": "../../sdk/client"
    },
    {
      "path": "../../sdk/config"
    },
    {
      "path": "../../sdk/react-client"
    },
    {
      "path": "../../sdk/react-components"
    },
    {
      "path": "../../sdk/react-toolkit"
    }
  ]
}

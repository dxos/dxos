{
  "sourceRoot": "packages/bot/botkit/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/bot/botkit/dist",
        "tsConfig": "packages/bot/botkit/tsconfig.json",
        "main": "packages/bot/botkit/src/index.ts"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/bot/botkit/**/*.{ts,js}"
        ]
      }
    },
    "test": {
      "executor": "@dxos/mocha:mocha",
      "options": {
        "testPatterns": [
          "packages/bot/botkit/src/**/*.test.{ts,js}"
        ]
      }
    }
  },
  "implicitDependencies": [
    "mocha"
  ]
}

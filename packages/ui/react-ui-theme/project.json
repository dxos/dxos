{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "react-ui-theme",
  "tags": [
    "scope:ui"
  ],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "compile": {
      "dependsOn": [
        "compile-lib",
        "compile-node"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "true"
        ]
      }
    },
    "compile-lib": {
      "dependsOn": [
        "^compile"
      ],
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "{projectRoot}/src/index.ts"
        ],
        "outputPath": "{projectRoot}/dist/lib",
        "platforms": [
          "browser"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile-node": {
      "dependsOn": [
        "^compile"
      ],
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "{projectRoot}/src/config/tailwind.ts",
          "{projectRoot}/src/plugins/esbuild-plugin.ts",
          "{projectRoot}/src/plugins/plugin.ts",
          "{projectRoot}/src/theme.css"
        ],
        "outputPath": "{projectRoot}/dist/plugin",
        "platforms": [
          "node"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "implicitDependencies": [
    "esbuild",
    "node-std"
  ]
}

{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "lit-grid",
  "tags": ["scope:ui"],
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {},
    "compile": {
      "cache": true,
      "dependsOn": ["^build"],
      "executor": "@nx/js:tsc",
      "options": {
        "main": "{projectRoot}/src/index.ts",
        "entryPoints": ["{projectRoot}/src/index.ts", "{projectRoot}/src/testing/index.ts"],
        "outputPath": "{projectRoot}/dist",
        "tsConfig": "{projectRoot}/tsconfig.json"
      }
    },
    "e2e": {
      "dependsOn": ["^compile", "stories:mkdist"]
    },
    "lint": {
      "options": {
        "lintFilePatterns": ["{projectRoot}/src/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "implicitDependencies": ["esbuild", "node-std"]
}

@layer dx-components {
  dx-tag-picker-item {
    display: inline-block;
    @apply p-0.5;
  }

  .dx-tag-picker-item.dx-tag {
    @apply p-0 m-0 flex;

    button {
      @apply pli-1;
      padding-block: var(--dx-tag-padding-block);
    }

    &[data-remove='true'] {
      button:first-child {
        @apply pie-0.5;
      }
      button:last-child {
        @apply pis-0.5;
      }
    }
  }
}

{
  "sourceRoot": "packages/ui/aurora/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/ui/aurora/src/index.ts",
        "outputPath": "packages/ui/aurora/dist/types",
        "tsConfig": "packages/ui/aurora/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "dependsOn": [
        "compile-lib",
        "compile-node"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "true"
        ]
      }
    },
    "compile-lib": {
      "dependsOn": [
        "^compile"
      ],
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/ui/aurora/src/index.ts"
        ],
        "outputPath": "packages/ui/aurora/dist/lib",
        "platforms": [
          "browser"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile-node": {
      "dependsOn": [
        "^compile"
      ],
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/ui/aurora/src/esbuild-plugin.ts",
          "packages/ui/aurora/src/plugin.ts",
          "packages/ui/aurora/src/theme.css"
        ],
        "outputPath": "packages/ui/aurora/dist/plugin",
        "platforms": [
          "node"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/ui/aurora/src/**/*.{js,jsx,ts,tsx}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "config": {
          "configFolder": "packages/ui/aurora/.storybook"
        },
        "uiFramework": "@storybook/react"
      }
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

{
  "author": "DXOS.org",
  "bugs": "https://github.com/dxos/dxos/issues",
  "dependencies": {
    "@dxos/node-std": "workspace:*",
    "@dxos/util": "workspace:*",
    "@fontsource-variable/inter": "catalog:",
    "@fontsource-variable/jetbrains-mono": "catalog:",
    "@fontsource/poiret-one": "catalog:",
    "@tailwindcss/forms": "catalog:",
    "@tailwindcss/postcss": "catalog:",
    "autoprefixer": "catalog:",
    "esbuild-style-plugin": "catalog:",
    "glob": "catalog:",
    "globby": "catalog:",
    "lodash.merge": "catalog:",
    "postcss": "catalog:",
    "postcss-import": "catalog:",
    "postcss-nesting": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwind-scrollbar": "catalog:",
    "tailwindcss": "catalog:",
    "tailwindcss-radix": "catalog:"
  },
  "description": "A set of design system tokens to use with DXOS UI.",
  "devDependencies": {
    "@dxos/ui-types": "workspace:*",
    "@types/lodash.merge": "catalog:",
    "@types/postcss-import": "catalog:",
    "esbuild": "catalog:",
    "vite": "catalog:"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/types/src/index.d.ts",
      "default": "./dist/lib/browser/index.mjs"
    },
    "./plugin": {
      "source": "./src/plugins/plugin.ts",
      "types": "./dist/types/src/plugins/plugin.d.ts",
      "import": "./dist/plugin/node-esm/plugins/plugin.mjs",
      "require": "./dist/plugin/node-cjs/plugins/plugin.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "homepage": "https://dxos.org",
  "license": "MIT",
  "name": "@dxos/ui-theme",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dxos/dxos"
  },
  "scripts": {
    "audit-classes": "npx tsx bin/audit-classes.mts",
    "tailwind-check": "tailwindcss -i ./dist/plugin/node-esm/theme.css --config ./src/tailwind.ts --content \"./src/**/*.{js,ts,jsx,tsx,vue}\" --check"
  },
  "sideEffects": [
    "*.css"
  ],
  "type": "module",
  "typesVersions": {
    "*": {
      "plugin": [
        "dist/types/src/plugins/plugin.d.ts"
      ]
    }
  },
  "version": "0.8.3"
}
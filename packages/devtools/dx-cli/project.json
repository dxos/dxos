{
  "sourceRoot": "packages/devtools/dx-cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/devtools/dx-cli/dist",
        "tsConfig": "packages/devtools/dx-cli/tsconfig.json",
        "main": "packages/devtools/dx-cli/src/index.ts"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/devtools/dx-cli/**/*.{ts,js}"
        ]
      }
    },
    "prerelease": {
      "executor": "nx:run-script",
      "inputs": [
        "default",
        "^production",
        {
          "env": "SENTRY_DSN"
        },
        {
          "env": "SEGMENT_API_KEY"
        }
      ],
      "outputs": [
        "packages/devtools/dx-cli/dist/src/util/telemetry.js"
      ],
      "options": {
        "script": "api-keys"
      }
    },
    "test": {
      "executor": "@dxos/mocha:mocha",
      "outputs": [
        "{options.outputPath}",
        "{options.resultsPath}",
        "{options.coveragePath}"
      ],
      "options": {
        "ciEnvironments": ["nodejs"],
        "testPatterns": [
          "packages/devtools/dx-cli/src/**/*.test.{ts,js}"
        ],
        "watchPatterns": [
          "packages/devtools/dx-cli/src/**/*"
        ],
        "outputPath": "tmp/mocha/packages/devtools/dx-cli",
        "resultsPath": "test-results/packages/devtools/dx-cli",
        "coveragePath": "coverage/packages/devtools/dx-cli",
        "checkLeaks": false
      },
      "dependsOn": [
        "build"
      ]
    }
  }
}

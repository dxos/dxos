{
  "sourceRoot": "packages/devtools/devtools-mesh/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/devtools/devtools-mesh/src/index.ts",
        "outputPath": "packages/devtools/devtools-mesh/dist",
        "tsConfig": "packages/devtools/devtools-mesh/tsconfig.json",
        "transformers": [
          "@dxos/log-hook/transformer"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/devtools/devtools-mesh/**/*.{ts,tsx,js,jsx}"
        ],
        "format": "unix"
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "toolbox": {
      "executor": "@dxos/toolbox:exec"
    }
  }
}

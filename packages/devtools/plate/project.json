{
  "sourceRoot": "packages/devtools/plate/src",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "packages/devtools/plate/src/index.ts",
        "outputPath": "packages/devtools/plate/dist/types",
        "tsConfig": "packages/devtools/plate/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "compile": {
      "executor": "@dxos/esbuild:build",
      "options": {
        "entryPoints": [
          "packages/devtools/plate/src/index.ts",
          "packages/devtools/plate/src/main.ts"
        ],
        "outputPath": "packages/devtools/plate/dist/lib",
        "platforms": [
          "node"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "executor": "nx:run-script",
      "options": {
        "script": "dev"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/devtools/plate/**/*.{ts,js}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    }
  },
  "implicitDependencies": [
    "esbuild"
  ]
}

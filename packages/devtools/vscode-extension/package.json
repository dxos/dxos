{
  "name": "@dxos/vscode-extension",
  "displayName": "DXOS VSCode Extension",
  "version": "0.0.1",
  "description": "VSCode extension for DXOS development",
  "categories": [
    "Other"
  ],
  "homepage": "https://dxos.org",
  "bugs": "https://github.com/dxos/dxos/issues",
  "license": "MIT",
  "author": "info@dxos.org",
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "pnpm run compile && pnpm run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "pnpm run compile",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "commands": [
      {
        "command": "dxos.helloWorld",
        "title": "DXOS: Hello World"
      },
      {
        "command": "dxos.showFileInfo",
        "title": "DXOS: Show File Info"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dxos.showFileInfo",
          "when": "resourceScheme == file",
          "group": "dxos@1"
        }
      ],
      "editor/title/context": [
        {
          "command": "dxos.showFileInfo",
          "when": "resourceScheme == file",
          "group": "dxos@1"
        }
      ]
    }
  },
  "activationEvents": [],
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "vscode": "^1.74.0"
  }
}

// Base tsconfig for all projects.
{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "${configDir}",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "outDir": "${configDir}/dist/types",
    "isolatedModules": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2018",
    "incremental": true
  },
  "include": [],
  "ts-node": {
    "swc": true
  }
}

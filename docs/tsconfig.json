{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "outDir": "dist",
    "types": [
      "@vuepress/client/types",
      "node",
      "vite/client"
    ]
  },
  "exclude": [
    "src/stories",
    "src/templates"
  ],
  "include": [
    "**/*.vue",
    "docs",
    "src",
    "src/components/*.vue",
    "vuepress.config.ts"
  ],
  "references": [
    {
      "path": "../packages/common/async"
    },
    {
      "path": "../packages/common/keys"
    },
    {
      "path": "../packages/common/log"
    },
    {
      "path": "../packages/common/telemetry"
    },
    {
      "path": "../packages/core/echo/echo-schema"
    },
    {
      "path": "../packages/core/echo/echo-typegen"
    },
    {
      "path": "../packages/core/protocols"
    },
    {
      "path": "../packages/sdk/client"
    },
    {
      "path": "../packages/sdk/client-services"
    },
    {
      "path": "../packages/sdk/config"
    },
    {
      "path": "../packages/sdk/react-client"
    },
    {
      "path": "../packages/sdk/vault"
    },
    {
      "path": "../packages/ui/aurora"
    },
    {
      "path": "../packages/ui/aurora-theme"
    },
    {
      "path": "../packages/ui/react-appkit"
    },
    {
      "path": "../tools/apidoc"
    }
  ],
  "ts-node": {
    "compilerOptions": {
      "allowJs": true
    },
    "esm": true
  }
}

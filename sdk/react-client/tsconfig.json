{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "target": "ES2018",
    "removeComments": false,
    // Have to specify typings explicitly here because fork-ts-checker-webpack-plugin can't find them automatically with PNPM.
    "types": [
      "jest"
    ]
  },
  "include": [
    "src",
    "stories",
  ],
  "references": [
    {"path": "../client"}
  ]
}

{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "incremental": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "experimentalDecorators": true
  },
  "include": ["**/src/**/*.ts","**/src/**/*.tsx", "packages/bot/test-bot/build-bot.test.ts"],
  "exclude": ["node_modules", "dist"]
}

{
  "project": {
    "ignored": ["@dxos/dxos"],
    "fixedKeys": ["$schema", "name", "tags", "sourceRoot", "projectType", "targets"]
  },
  "package": {
    "commonKeys": ["license", "author", "homepage", "bugs"],
    "withCustomExports": [
      "@dxos/async",
      "@dxos/codec-protobuf",
      "@dxos/context",
      "@dxos/debug",
      "@dxos/invariant",
      "@dxos/keys",
      "@dxos/lit-grid",
      "@dxos/log",
      "@dxos/node-std",
      "@dxos/random",
      "@dxos/react-ui-graph",
      "@dxos/react-ui-stack",
      "@dxos/shell",
      "@dxos/test-utils",
      "@dxos/timeframe",
      "@dxos/tracing",
      "@dxos/util"
    ]
  },
  "tsconfig": {
    "fixedKeys": ["extends", "compilerOptions"],
    "pathMapping": {
      "roots": ["@dxos/composer-app"],
      "include": [
        "packages/common/storybook-utils",
        "packages/core/assistant-testing",
        "packages/core/assistant",
        "packages/core/compute",
        "packages/core/conductor",
        "packages/core/functions",
        "packages/devtools/devtools",
        "packages/plugins/*",
        "packages/sdk/app-framework",
        "packages/sdk/app-graph",
        "packages/sdk/migrations",
        "packages/sdk/shell",
        "packages/ui/react-ui*"
      ]
    },
    "noProjectReferences": false
  }
}

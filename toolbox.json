{
  "project": {
    "ignored": ["@dxos/dxos"],
    "fixedKeys": ["$schema", "name", "tags", "sourceRoot", "projectType", "targets"]
  },
  "package": {
    "commonKeys": ["license", "author", "homepage", "bugs"],
    "devKeys": ["main", "module", "types"],
    "withCustomExports": [
      "@dxos/shell",
      "@dxos/node-std",
      "@dxos/invariant",
      "@dxos/log",
      "@dxos/codec-protobuf",
      "@dxos/context",
      "@dxos/debug",
      "@dxos/util",
      "@dxos/async",
      "@dxos/keys",
      "@dxos/timeframe",
      "@dxos/tracing",
      "@dxos/lit-grid",
      "@dxos/plate",
      "@dxos/gem-spore",
      "@dxos/test-utils",
      "@dxos/react-ui-stack",
      "@dxos/random"
    ]
  },
  "tsconfig": {
    "fixedKeys": ["extends", "compilerOptions"],
    "pathMapping": {
      "include": [
        "packages/devtools/devtools",
        "packages/plugins/*",
        "packages/plugins/experimental/*",
        "packages/sdk/app-graph",
        "packages/sdk/app-framework",
        "packages/sdk/migrations",
        "packages/sdk/shell"
      ]
    },
    "noProjectReferences": false
  }
}

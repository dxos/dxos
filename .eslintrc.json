{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": "off",
    "comma-dangle": "off",
    "consistent-return": "off",
    "dot-notation": "off",
    "import/prefer-default-export": "off",
    "lines-between-class-members": "off",
    "max-len": [2, 120, 2, {
      "ignoreComments": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreUrls": true
      }
    ],
    "no-cond-assign": "off",
    "no-console": "off",
    "no-continue": "off",
    "no-else-return": "off",
    "no-lone-blocks": "off",
    "no-multi-spaces": "off",
    "no-nested-ternary": "off",
    "no-param-reassign": "off",
    "no-shadow": "off",
    "no-underscore-dangle": "off",
    "object-curly-newline": "off",
    "padded-blocks": "off",
    "react/prop-types": "off",
    "class-methods-use-this": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "no-await-in-loop": "off"
  }
}

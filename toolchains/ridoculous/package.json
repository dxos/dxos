{
  "name": "@dxos/ridoculous",
  "description": "Markdown processing CLI and library.",
  "version": "2.33.8",
  "license": "MIT",
  "type": "module",
  "bin": {
    "ridoculous": "./bin/ridoculous.js"
  },
  "main": "dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "build:test": "pnpm build && pnpm lint",
    "info": "tsc --showConfig | jq",
    "lint": "eslint .",
    "update:docs": "ts-node --esm ./src/main.ts --files ./testing/docs/**/*.md --auto-number --dry-run",
    "update:test": "rm -rf ./out && DEBUG='dxos:ridoculous:*' ts-node --esm ./src/main.ts --files 'testing/**/*.md' --verbose",
    "test": "mocha"
  },
  "dependencies": {
    "@microsoft/tsdoc": "~0.14.1",
    "array-iterate": "~2.0.1",
    "debug": "^4.3.3",
    "glob": "~7.1.6",
    "js-yaml": "^4.1.0",
    "mdast-util-to-markdown": "~1.3.0",
    "protocol-buffers-schema": "~3.6.0",
    "rehype-stringify": "~9.0.3",
    "remark": "~14.0.2",
    "remark-gfm": "~3.0.1",
    "remark-lint": "~9.1.1",
    "remark-normalize-headings": "~3.0.1",
    "remark-rehype": "~10.1.0",
    "to-vfile": "~7.2.3",
    "unist-builder": "~3.0.0",
    "unist-util-visit": "^4.1.0",
    "yargs": "~16.2.0",
    "chalk": "^4.1.0"
  },
  "devDependencies": {
    "@dxos/esbuild-plugins": "~2.28.12",
    "@dxos/esbuild-server": "~2.28.12",
    "@dxos/eslint-plugin": "~1.0.34",
    "@dxos/protobuf-compiler": "workspace:*",
    "@types/debug": "^4.1.7",
    "@types/glob": "~7.1.3",
    "@types/jest": "^28.1.6",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.11.27",
    "@types/protocol-buffers-schema":  "^3.4.1",
    "@types/yargs": "~16.0.1",
    "diff": "~5.1.0",
    "eslint": "^7.12.1",
    "expect": "~27.0.2",
    "jest": "^28.1.3",
    "mocha": "~8.4.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.2"
  },
  "mocha": {
    "spec": "src/**/*.test.ts",
    "loader": "ts-node/esm"
  }
}

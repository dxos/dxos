{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2018",
    "removeComments": false
  },
  "include": [
    "src",
    "stories",
  ],
  "references": [
    { "path": "../echo-db" },
    { "path": "../echo-protocol" },
    { "path": "../model-factory" },
    { "path": "../object-model" },
    { "path": "../util" }
  ]
}

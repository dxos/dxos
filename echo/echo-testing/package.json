{
  "name": "@dxos/echo-testing",
  "version": "2.6.22",
  "description": "ECHO testing utils.",
  "homepage": "https://github.com/dxos/echo/tree/master/packages/echo#readme",
  "bugs": {
    "url": "https://github.com/dxos/echo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxos/echo.git"
  },
  "license": "AGPL-3.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "private": false,
  "scripts": {
    "build": "tsc && pnpm run lint && pnpm run test 2>&1",
    "depcheck": "npx depcheck --specials=bin,babel,eslint,lint-staged,jest",
    "coverage": "jest --coverage --rootDir=./src --verbose --passWithNoTests",
    "lint": "eslint --format codeframe './src/**/*.ts'",
    "test": "jest --rootDir=./src --verbose --passWithNoTests",
    "prepublishOnly": "npm run test && npm run build",
    "watch": "babel-watch src --out-dir ./dist --source-maps"
  },
  "browserslist": [
    "> 5%"
  ],
  "jest": {
    "preset": "ts-jest/presets/default",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@dxos/echo-db": "^2.6.17",
    "@dxos/echo-protocol": "^2.6.17",
    "@dxos/object-model": "^2.6.17",
    "debug": "^4.1.1",
    "faker": "^5.1.0",
    "js-data-structs": "^1.1.2",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@dxos/eslint-plugin": "~1.0.10",
    "@types/debug": "^4.1.1",
    "@types/faker": "~5.5.1",
    "@types/jest": "^26.0.7",
    "@types/lodash": "^4.14.159",
    "eslint-plugin-jest": "^24.0.2",
    "jest": "^26.2.2",
    "ts-jest": "^26.1.4",
    "typescript": "^4.0.2",
    "wait-for-expect": "^3.0.2",
    "eslint": "^7.7.0"
  },
  "eslintConfig": {
    "extends": "plugin:@dxos/recomended"
  },
  "publishConfig": {
    "access": "public"
  }
}

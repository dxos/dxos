{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build (tsc)",
      "type": "typescript",
      "tsconfig": "tsconfig.all.json",
      "problemMatcher": ["$tsc-watch"],
      "option": "watch",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build current tsconfig (tsc)",
      "type": "typescript",
      "tsconfig": "${relativeFile}",
      "problemMatcher": ["$tsc-watch"],
      "option": "watch",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "install dependencies",
      "type": "shell",
      "command": "pnpm install",
      "problemMatcher": [],
      "presentation": {
        "echo": true
      }
    },
    {
      "label": "test current file",
      "type": "shell",
      "command": "cd ${fileDirname} && pnpm vitest ${file}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "storybook",
      "type": "shell",
      "command": "moon run storybook:serve",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "serve composer-app",
      "type": "shell",
      "command": "moon run composer-app:serve",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "group": {
        "kind": "test"
      },
      "options": {
        "env": {
          "DX_LABS": "true"
        }
      }
    },
    {
      "label": "build and test all packages",
      "type": "shell",
      "command": "moon run :build :test --concurrency 12",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "group": {
        "kind": "build"
      }
    }
  ]
}

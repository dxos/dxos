{
  "extends": "nx/presets/npm.json",
  "npmScope": "dxos",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "check",
          "build",
          "lint",
          "test"
        ],
        "runtimeCacheInputs": [
          "echo $DXOS_CACHE_NAMESPACE"
        ],
        "parallel": 6,
        "accessToken": "ZGVlNTQ0ODctNGI4ZS00MTc0LTljZDQtMzFlMzJkOTViMmQyfHJlYWQtd3JpdGU="
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "check": {
      "dependsOn": [
        "build"
      ]
    }
  }
}

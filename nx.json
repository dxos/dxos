{
  // https://nx.dev/reference/nx-json
  "extends": "nx/presets/npm.json",
  "npmScope": "dxos",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "bundle",
          "compile",
          "compile-lib",
          "compile-node",
          "e2e",
          "lint",
          "prebuild",
          "prerelease",
          "storybook-build",
          "test"
        ],
        "parallel": 6,
        "accessToken": "ZGVlNTQ0ODctNGI4ZS00MTc0LTljZDQtMzFlMzJkOTViMmQyfHJlYWQtd3JpdGU="
      }
    }
  },
  // Named inputs explained here: https://nx.dev/more-concepts/customizing-inputs
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    // Nx assumes the use of tsconfig.base.json.
    // https://nx.dev/more-concepts/customizing-inputs#global-settings.
    "sharedGlobals": [
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/.eslintrc*.js"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/eslintConfig.json",
      "!{workspaceRoot}/.eslintrc*.js"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "^build",
        "prebuild",
        "compile"
      ]
    },
    "bundle": {
      "inputs": [
        "production",
        "^production",
        {
          "env": "CONFIG_DYNAMIC"
        },
        {
          "env": "DX_ENVIRONMENT"
        },
        {
          "env": "DX_IPDATA_API_KEY"
        },
        {
          "env": "DX_SENTRY_DESTINATION"
        },
        {
          "env": "DX_TELEMETRY_API_KEY"
        },
        {
          "env": "DX_VAULT"
        },
        {
          "env": "NODE_ENV"
        },
        {
          "env": "REMOTE_SOURCE"
        },
        {
          "env": "LOG_FILTER"
        },
        {
          "env": "LOG_PREFIX"
        },
        {
          "env": "SENTRY_RELEASE_AUTH_TOKEN"
        }
      ],
      "dependsOn": [
        // TODO(wittjosiah): This might be able to be ^compile to speed up deploys.
        //   Some experimental/deprecated projects still depend on build for transpiling.
        "^build",
        "prebuild"
      ]
    },
    "chromatic": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "storybook-build"
      ]
    },
    "compile": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "^compile",
        "prebuild"
      ]
    },
    "e2e": {
      "inputs": [
        "default",
        "^production",
        {
          "env": "CI"
        },
        {
          "env": "LOG_LEVEL"
        },
        {
          "env": "LOG_PROCESSOR"
        }
      ],
      "dependsOn": [
        "prebuild",
        "^compile"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "inputs": ["default"],
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "{projectRoot}/**/*.{ts,tsx,js,jsx}"
        ],
        "quiet": true
      }
    },
    "prebuild": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "^compile"
      ]
    },
    "prerelease": {
      "inputs": ["default", "^production"],
      "dependsOn": [
        "^build"
      ]
    },
    "preview": {
      "inputs": ["production", "^production"]
    },
    "serve": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "^compile",
        "prebuild"
      ]
    },
    "serve-with-vault": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "^compile",
        "prebuild"
      ]
    },
    "storybook": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "^compile",
        "prebuild"
      ]
    },
    "storybook-build": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "^compile",
        "prebuild"
      ]
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        {
          "env": "CI"
        },
        {
          "env": "LOG_LEVEL"
        },
        {
          "env": "LOG_PROCESSOR"
        }
      ],
      "dependsOn": [
        "prebuild",
        "^compile"
      ]
    }
  }
}

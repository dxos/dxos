{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "include": [
    "src"
  ]
}

{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "stories",
  "projectType": "library",
  "targets": {
    "bundle": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        "^compile",
        "mkdist"
      ],
      "executor": "@nx/storybook:build",
      "options": {
        "configDir": "{projectRoot}/config/all",
        "outputDir": "{projectRoot}/out/stories"
      },
      "outputs": [
        "{options.outputDir}"
      ]
    },
    "lint": {
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/*-stories/*.mts",
          "{projectRoot}/.storybook/*.ts",
          "{projectRoot}/config/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "mkdist": {
      "cache": true,
      "command": "mkdir -p tools/stories/static",
      "outputs": [
        "{workspaceRoot}/tools/stories/static"
      ]
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        "^compile",
        "mkdist"
      ],
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "{projectRoot}/config/all"
      }
    },
    "storybook-docs": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "{projectRoot}/config/all",
        "docsMode": true,
        "port": 4400
      }
    },
    "storybook-e2e": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        "^compile",
        "mkdist"
      ],
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "{projectRoot}/config/e2e",
        "outputDir": "{projectRoot}/out/e2e"
      }
    },
    "storybook-examples": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        "^compile"
      ],
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "{projectRoot}/config/examples",
        "outputDir": "{projectRoot}/out/examples"
      }
    },
    "test": {
      "options": {
        "browsers": [
          "chromium"
        ],
        "ci": true,
        "coverage": true,
        "coverageProvider": "v8",
        "environment": "jsdom",
        "globals": true,
        "headless": true,
        "include": [
          "**/*.test.{js,jsx,ts,tsx}"
        ],
        "passWithNoTests": true,
        "reporter": [
          "default",
          "html"
        ],
        "viteConfig": {
          "plugins": [
            {
              "config": {
                "ci": true,
                "configDir": ".storybook",
                "headless": true
              },
              "name": "storybook-test"
            }
          ]
        },
        "watch": false
      }
    }
  },
  "implicitDependencies": [
    "app-graph",
    "composer-app",
    "devtools",
    "examples",
    "plexus",
    "react-client",
    "react-ui",
    "react-ui-editor",
    "react-ui-geo",
    "react-ui-grid",
    "react-ui-searchlist",
    "react-ui-stack",
    "react-ui-table",
    "shell",
    "vite-plugin-icons"
  ]
}

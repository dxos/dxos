{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "stories",
  "projectType": "library",
  "targets": {
    "bundle": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        "^compile",
        "mkdist"
      ],
      "executor": "@nx/storybook:build",
      "options": {
        "configDir": "{projectRoot}/config/all",
        "outputDir": "{projectRoot}/out/stories"
      },
      "outputs": [
        "{options.outputDir}"
      ]
    },
    "lint": {
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/*-stories/*.mts",
          "{projectRoot}/.storybook/*.ts",
          "{projectRoot}/config/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "mkdist": {
      "cache": true,
      "command": "mkdir -p tools/stories/static",
      "outputs": [
        "{workspaceRoot}/tools/stories/static"
      ]
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        "^compile",
        "mkdist"
      ],
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "{projectRoot}/config/all"
      }
    },
    "storybook-e2e": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        "^compile",
        "mkdist"
      ],
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "{projectRoot}/config/e2e",
        "outputDir": "{projectRoot}/out/e2e"
      }
    },
    "storybook-examples": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        "^compile"
      ],
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "{projectRoot}/config/examples",
        "outputDir": "{projectRoot}/out/examples"
      }
    }
  },
  "implicitDependencies": [
    "app-graph",
    "chess-app",
    "composer-app",
    "devtools",
    "examples",
    "gem-core",
    "gem-globe",
    "plexus",
    "react-client",
    "react-ui",
    "react-ui-card",
    "react-ui-editor",
    "react-ui-grid",
    "react-ui-mosaic",
    "react-ui-searchlist",
    "react-ui-stack",
    "react-ui-table",
    "shell",
    "vite-plugin-icons"
  ]
}

{
  "sourceRoot": "tools/stories/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "options": {
        "lintFilePatterns": [
          "tools/stories/.storybook/*.mts",
          "tools/stories/src/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "tools/stories/.storybook"
      }
    },
    "storybook-build": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@nx/storybook:build",
      "options": {
        "configDir": "tools/stories/.storybook",
        "outputDir": "tools/stories/out"
      },
      "outputs": [
        "{options.outputDir}"
      ]
    }
  }
}

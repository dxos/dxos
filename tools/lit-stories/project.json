{
  "sourceRoot": "tools/lit-stories/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "options": {
        "lintFilePatterns": [
          "tools/lit-stories/*-stories/*.mts",
          "tools/lit-stories/.storybook-shared/*.ts",
          "tools/lit-stories/src/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "mkdist": {
      "command": "mkdir -p tools/lit-stories/static"
    },
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        "^build",
        "mkdist"
      ],
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "tools/lit-stories/all-stories"
      }
    }
  },
  "root": "tools/lit-stories"
}

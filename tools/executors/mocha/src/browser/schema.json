{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "cli": "nx",
  "properties": {
    "testPatterns": {
      "type": "array",
      "description": "Globs of tests"
    },
    "browsers": {
      "type": "array",
      "description": "Browser environments to run tests in",
      "default": ["chromium", "firefox", "webkit"]
    },
    "browserArgs": {
      "type": "array",
      "description": "Arguments to pass to browser runner"
    },
    "stayOpen": {
      "type": "boolean",
      "description": "Keep browser window open after tests have completed",
      "default": false
    },
    "headless": {
      "type": "boolean",
      "description": "Run browser environments in headless mode",
      "default": true
    },
    "checkLeaks": {
      "type": "boolean",
      "description": "Check for global variable leaks",
      "default": false
    },
    "debug": {
      "type": "boolean",
      "description": "Enable debug logging",
      "default": false
    },
    "setup": {
      "type": "string",
      "description": "Setup script to run before tests"
    }
  },
  "required": ["testPatterns"]
}

{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "cli": "nx",
  "properties": {
    "testPatterns": {
      "type": "array",
      "description": "Globs of tests"
    },
    "environments": {
      "type": "array",
      "description": "Environments to run tests in",
      "default": ["nodejs", "chromium", "firefox", "webkit"]
    },
    "domRequired": {
      "type": "boolean",
      "description": "Register mock dom environment in Node test process",
      "default": false
    },
    "signalServer": {
      "type": "boolean",
      "description": "Start signal server in test process",
      "default": false
    },
    "timeout": {
      "type": "number",
      "description": "Mocha timeout in ms",
      "default": 15000
    },
    "stayOpen": {
      "type": "boolean",
      "description": "Keep browser window open after tests have completed",
      "default": false
    },
    "headless": {
      "type": "boolean",
      "description": "Run browser environments in headless mode",
      "default": true
    },
    "checkLeaks": {
      "type": "boolean",
      "description": "Check for global variable leaks",
      "default": false
    },
    "debug": {
      "type": "boolean",
      "description": "Enable debug logging",
      "default": false
    },
    "browserArgs": {
      "type": "array",
      "description": "Arguments to pass to browser runner"
    },
    "setup": {
      "type": "string",
      "description": "Setup script to run before tests"
    }

    // "ignorePatterns": {
    //   "type": "array",
    //   "description": "Globs of tests to ignore"
    // },
    // "watch": {
    //   "type": "boolean",
    //   "description": "Rerun tests on source file changes",
    //   "default": false
    // },
    // "watchFiles": {
    //   "type": "array",
    //   "description": "Glob of files to watch"
    // }
  },
  "required": ["testPatterns"]
}

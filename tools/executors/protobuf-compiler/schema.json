{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "cli": "nx",
  "properties": {
    "basePath": {
      "type": "string",
      "description": "Common base for `srcPath`, `substitutionsPath` and `outputPath`"
    },
    "srcPath": {
      "type": "string",
      "description": "Glob to locate source .proto files (relative to `basePath`)",
      "default": "**/*.proto"
    },
    "substitutionsPath": {
      "type": "string",
      "description": "Path to substitutions file (relative to `basePath`)",
      "default": "substitutions.ts"
    },
    "outputPath": {
      "type": "string",
      "description": "Directory for generated modules (relative to `basePath`)",
      "default": "gen"
    },
    "packageExports": {
      "type": "boolean",
      "description": "Export generated types from the package.",
      "default": false
    }
  },
  "required": [
    "basePath"
  ]
}

{
  "sourceRoot": "tools/executors/esbuild/src",
  "targets": {
    "compile": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "tools/executors/esbuild/src/index.ts",
        "outputPath": "tools/executors/esbuild/dist",
        "transformers": [
          "@dxos/log-hook/transformer"
        ],
        "tsConfig": "tools/executors/esbuild/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "tools/executors/esbuild/**/*.{ts,js}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@dxos/test:run",
      "options": {
        "coveragePath": "coverage/tools/executors/esbuild",
        "forceExit": true,
        "outputPath": "tmp/mocha/tools/executors/esbuild",
        "resultsPath": "test-results/tools/executors/esbuild",
        "testPatterns": [
          "tools/executors/esbuild/src/**/*.test.{ts,js}"
        ],
        "watchPatterns": [
          "tools/executors/esbuild/src/**/*"
        ]
      },
      "outputs": [
        "{options.coveragePath}",
        "{options.outputPath}",
        "{options.resultsPath}"
      ]
    }
  },
  "implicitDependencies": [
    "log-hook"
  ]
}

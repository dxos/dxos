{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "emitDeclarationOnly": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "target": "ESNext",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "out"
  ],
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../../packages/common/log"
    }
  ]
}

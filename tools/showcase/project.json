{
  "sourceRoot": "tools/showcase/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "tools/showcase/dist",
        "tsConfig": "tools/showcase/tsconfig.json",
        "main": "tools/showcase/src/index.ts"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "tools/showcase/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  }
}

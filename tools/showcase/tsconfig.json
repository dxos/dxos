{
  "include": ["src", "loader.js"],
  "exclude": [
    ".git",
    ".github",
    ".idea",
    "common",
    "dist",
    "node_modules",
    "out",
    "public"
  ],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "paths": {
      "@site/*": ["./*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["node", "@docusaurus/module-type-aliases", "@docusaurus/theme-classic"],
  }
}
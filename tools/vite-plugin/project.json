{
  "sourceRoot": "tools/vite-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "tools/vite-plugin/dist",
        "tsConfig": "tools/vite-plugin/tsconfig.json",
        "main": "tools/vite-plugin/src/index.ts"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "tools/vite-plugin/**/*.{ts,js}"
        ]
      }
    }
  }
}

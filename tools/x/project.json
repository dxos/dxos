{
  "sourceRoot": "tools/x/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "main": "tools/x/src/index.ts",
        "outputPath": "tools/x/dist",
        "transformers": [
          "@dxos/log-hook/transformer"
        ],
        "tsConfig": "tools/x/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "tools/x/**/*.{ts,js}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@dxos/mocha:mocha",
      "options": {
        "ciEnvironments": [
          "nodejs"
        ],
        "coveragePath": "coverage/tools/x",
        "outputPath": "tmp/mocha/tools/x",
        "resultsPath": "test-results/tools/x",
        "testPatterns": [
          "tools/x/src/**/*.test.{ts,js}"
        ],
        "watchPatterns": [
          "tools/x/src/**/*"
        ]
      },
      "outputs": [
        "{options.coveragePath}",
        "{options.outputPath}",
        "{options.resultsPath}"
      ]
    }
  }
}

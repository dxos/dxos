{
  "sourceRoot": "tools/conform/src",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "tools/conform/src/index.ts",
        "outputPath": "tools/conform/dist",
        "transformers": [
          "@dxos/log-hook/transformer"
        ],
        "tsConfig": "tools/conform/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "executor": "nx:run-script",
      "options": {
        "script": "dev"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "tools/conform/**/*.{ts,js}"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    }
  }
}
